<?xml version="1.0"?>
<robot name="balance_robot_2floor">

  <!-- ================= BASE (bottom plate) ================= -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0"  rpy="0 0 -1.5708"/>
      <mass value="0.279"/>
      <inertia ixx="0.005" iyy="0.005" izz="0.005"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" />
      <!-- rpy="0 0 -1.5708" -->
      <geometry>
        <box size="0.14 0.065 0.004"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.14 0.065 0.004"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= TOP PLATE ================= -->
  <link name="top_plate">
    <inertial>
      <origin xyz="0 0 0"  rpy="0 0 0" />
      <mass value="0.05"/>
      <inertia ixx="0.001" iyy="0.001" izz="0.001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <box size="0.14 0.065 0.004"/>
      </geometry>
      <material name="black">
        <color rgba="0.15 0.15 0.15 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.14 0.065 0.004"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= SUPPORT RODS ================= -->
  <!-- All rods are vertical (along Z-axis) -->
  <link name="rod_front_left">
    <visual>
      <origin xyz="0.06 0.025 0.025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.06 0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="rod_front_right">
    <visual>
      <origin xyz="0.06 -0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.06 -0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="rod_back_left">
    <visual>
      <origin xyz="-0.06 0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.06 0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="rod_back_right">
    <visual>
      <origin xyz="-0.06 -0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.06 -0.025 0.025"/>
      <geometry>
        <cylinder radius="0.005" length="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= WHEELS ================= -->
  <link name="left_wheel">
    <inertial>
      <mass value="0.0765"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel">
    <inertial>
      <mass value="0.0765"/>
      <inertia ixx="0.0002" iyy="0.0002" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
      <material name="gray">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <!-- ================= JOINTS ================= -->
  <joint name="base_to_top" type="fixed">
    <parent link="base_link"/>
    <child link="top_plate"/>
    <origin xyz="0 0 0.05"/>
     <!-- rpy="0 0 -1.5708"  -->
  </joint>

  <!-- Vertical rods connect base to top correctly -->
  <joint name="base_to_rod_front_left" type="fixed">
    <parent link="base_link"/>
    <child link="rod_front_left"/>
    <origin xyz="0 0 0"  rpy="0 0 -1.5708"/>
  </joint>

  <joint name="base_to_rod_front_right" type="fixed">
    <parent link="base_link"/>
    <child link="rod_front_right"/>
    <origin xyz="0 0 0"  rpy="0 0 -1.5708"/>
  </joint>

  <joint name="base_to_rod_back_left" type="fixed">
    <parent link="base_link"/>
    <child link="rod_back_left"/>
    <origin xyz="0 0 0"  rpy="0 0 -1.5708"/>
  </joint>

  <joint name="base_to_rod_back_right" type="fixed">
    <parent link="base_link"/>
    <child link="rod_back_right"/>
    <origin xyz="0 0 0"  rpy="0 0 -1.5708"/>
  </joint>

  <!-- Wheels -->
  <joint name="base_to_left_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0 0.09 -0.035"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_right_wheel" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0 -0.09 -0.035"/>
    <axis xyz="0 -1 0"/>
  </joint>

</robot>
